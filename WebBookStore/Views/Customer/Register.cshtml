
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table align="center">
    <h2 align="center">REGISTER MEMBER</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>
                Fullname:
            </td>
            <td>
                @Html.TextBox("HotenHK")
                @ViewData["Error1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                User:
            </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Error2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                Password:
            </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Error3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                Confirm Password:
            </td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Error4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                Email:
            </td>
            <td>
                <input type="email" data-val="true" data-val-email="Please enter a valid email" id="Email" name="Email" value="" />
                @ViewData["Error5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                Phone:
            </td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Error6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                Address:
            </td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["Error7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                Birthday:
            </td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td>
            </td>
            <td>
                <input type="submit" value="Register" />
            </td>
        </tr>
    }

</table>

